<Application x:Class="backtest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:backtest"
             StartupUri="opening.xaml">
    <Application.Resources>
        <Style x:Key="TileButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Fond -->
                            <Border x:Name="bg"
                            Background="#062544"
                            CornerRadius="12"
                            SnapsToDevicePixels="True">
                                <Grid>
                                    <!-- Icône + texte -->
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="8,0">
                                        <!-- Icône (Path) → sera remplacé dans le bouton -->
                                        <ContentPresenter x:Name="IconPresenter"
                                                  Content="{TemplateBinding Tag}"
                                                  Margin="0,0,0,2"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="{TemplateBinding Content}"
                                           Foreground="#00AEEF"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           FontWeight="SemiBold"/>
                                        
                            
                                    </StackPanel>
                                </Grid>
                            </Border>

                            
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#0B3B5A"/>
                                <Setter TargetName="bg" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#003A97" BlurRadius="18" ShadowDepth="0" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Application.Resources>
</Application>
