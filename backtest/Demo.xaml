<Window x:Class="backtest.Demo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Présentation - DataEdge"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Height="500" Width="800" Icon="cf-flow-2rapArajcTSXxgLa8IS4fim2Rx2 (1).ico">
    <Grid MouseDown="Window_MouseDown">
        <!-- Fond principal -->
        <Border CornerRadius="30" BorderThickness="2" BorderBrush="White" Background="Black">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#285497" />
            </Border.Effect>
        </Border>

        <!-- Conteneur principal -->
        <Grid Margin="20">
            <Image Name="SlideImage" Stretch="Uniform" />
            <DockPanel LastChildFill="False" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,10,20" Width="740" Height="62">

                <Border DockPanel.Dock="Left" CornerRadius="20" Width="130" Height="50" Margin="5" HorizontalAlignment="Right" BorderThickness="1,2">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#000000" Offset="0"/>
                            <GradientStop Color="#FF4B514D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Button x:Name="PreviousSlideButton"
            Content="Précédent"
            Background="{x:Null}"
            Foreground="White"
            FontWeight="Bold"
            Cursor="Hand"
            Click="PreviousSlide_Click" Margin="8.667,0,9.333,0">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
                <Border DockPanel.Dock="Right" CornerRadius="20" Width="130" Height="50" Margin="5" HorizontalAlignment="Right" BorderThickness="1,2">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#000000" Offset="0"/>
                            <GradientStop Color="#FF4B514D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Button x:Name="NextSlideButton"
            Content="Suivant"
            Background="{x:Null}"
            Foreground="White"
            FontWeight="Bold"
            Cursor="Hand"
            Click="NextSlide_Click" Margin="8.667,0,9.333,0">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>


            </DockPanel>
            <Canvas HorizontalAlignment="Left" Height="460" VerticalAlignment="Top" Width="760"/>

            <!-- Conteneur des boutons -->
        </Grid>
    </Grid>
</Window>
