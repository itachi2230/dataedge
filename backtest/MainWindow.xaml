<Window x:Class="backtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:backtest"
        xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="Tableau de Bord - Performances" Height="705" Width="1181.675"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" ResizeMode="CanResizeWithGrip" Icon="cf-flow-2rapArajcTSXxgLa8IS4fim2Rx2 (1).ico" WindowState="Maximized">

    <Window.Resources>
        <local:ChampPersonnaliseConverter x:Key="ChampPersonnaliseConverter" />
        <!-- Style personnalisé pour le bouton avec dégradé et coins arrondis -->
        <Style x:Key="BoutonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00BFFF" Offset="0.0"/>
                        <GradientStop Color="#1E90FF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>

            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CustomCheckBoxStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <!-- Boîte de contrôle -->
                            <Border Width="20" Height="20" BorderThickness="2" CornerRadius="3"
                                BorderBrush="{TemplateBinding BorderBrush}" Background="Transparent">
                                <Grid>
                                    <Rectangle Fill="Transparent" />
                                    <Rectangle Fill="Blue" Opacity="0" x:Name="CheckMark" />
                                </Grid>
                            </Border>
                            <!-- Texte -->
                            <TextBlock Text="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <!-- Checked -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Opacity" Value="1" />
                            </Trigger>
                            <!-- Mouse Over -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FFD700" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Name="papa">

        <Grid Name="MainGrid" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00264D" Offset="0.0" />
                    <GradientStop Color="#FF03284D" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            <Grid Name="dashboard" Grid.ColumnSpan="2">
                <!-- Fond avec dégradé -->
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00264D" Offset="0.0" />
                        <GradientStop Color="#FF03284D" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>



                <!-- Statistiques circulaires -->
                <Grid Margin="0,50,0,110">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Statistique : Taux de Succès avec deux barres circulaires -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Left" Margin="0,11,0,8.8" Width="159">
                        <TextBlock FontWeight="Bold" Foreground="#FFE0E0E0" HorizontalAlignment="Center" FontSize="10" TextAlignment="Center" Height="21" Margin="29,0,28.2,0" ><Run Text="Taux de Succès"/><Run Text=" "/><Run Text="BUY"/></TextBlock>
                        <Grid Height="110" Margin="0,0,0.2,0">

                            <!-- Déclaration des animations dans les ressources -->
                            <Ellipse Fill="Gray" Opacity="0.3" Margin="35,0,35.2,11" />

                            <!-- Ellipse extérieure avec effet de rotation -->
                            <Ellipse Stroke="#00BFFF" StrokeThickness="9" RenderTransformOrigin="0.5,0.5" Margin="24,-10,26.2,3">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="OuterRotateTransform" Angle="270" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Ellipse intérieure avec effet de rotation et surbrillance -->
                            <Ellipse Stroke="#1E90FF" StrokeThickness="11" RenderTransformOrigin="0.5,0.5" Margin="28,-2,30,11">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="InnerRotateTransform" Angle="210" />
                                </Ellipse.RenderTransform>

                                <Ellipse.Effect>
                                    <!-- Effet de surbrillance -->
                                    <DropShadowEffect Color="LightBlue" BlurRadius="20" ShadowDepth="0" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Texte central -->
                            <TextBlock x:Name="tauxBuy"  Text="75%" FontSize="24" FontWeight="Bold" Foreground="LightGreen" 
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32,26,29.2,43" Height="34" Width="66" TextAlignment="Center" />

                        </Grid>

                        <TextBlock FontWeight="Bold" Foreground="#FFE0E0E0" HorizontalAlignment="Center" Height="18" FontSize="10" Width="122" TextAlignment="Center" ><Run Text="Taux de Succès"/><Run Text="  SE"/><Run Text="LL"/></TextBlock>
                        <Grid Height="100" Margin="0,0,0.2,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="23*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>

                            <Ellipse Width="80" Fill="Gray" Opacity="0.3" Margin="26,5,3,0" />

                            <!-- Ellipse extérieure avec rotation -->
                            <Ellipse Stroke="#FF8000FF" StrokeThickness="8" RenderTransformOrigin="0.5,0.5" Margin="28,-9,2.4,-3">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="OuterRotateTransform2" Angle="270" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Ellipse intérieure avec rotation et surbrillance -->
                            <Ellipse Stroke="#FFCD63A6" StrokeThickness="8" RenderTransformOrigin="0.5,0.5" Margin="31,-1,5.4,7">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="InnerRotateTransform2" Angle="210" />
                                </Ellipse.RenderTransform>

                                <Ellipse.Effect>
                                    <!-- Effet de surbrillance -->
                                    <DropShadowEffect Color="LightPink" BlurRadius="20" ShadowDepth="0" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Texte central -->
                            <TextBlock x:Name="tauxSell" Text="25%" FontSize="24" FontWeight="Bold" Foreground="#FFEE90DD" 
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="44,23,20.4,38" Width="66" TextAlignment="Center" />
                        </Grid>


                    </StackPanel>

                    <!-- Graphique en barre : Performance mensuelle -->
                    <StackPanel HorizontalAlignment="Center" Margin="304,11,496.6,115.8" Width="381" Grid.ColumnSpan="2">
                        <TextBlock FontWeight="Bold" Foreground="#FFE6E6E6" HorizontalAlignment="Center" ><Run Text="Performance "/><Run Text="des"/><Run Text=" strategie"/><Run Text="s"/></TextBlock>
                        <StackPanel x:Name="perfStrat" Orientation="Vertical" Margin="0,5,10,0" Height="218">


                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="127,11,291.4,8.8" Width="172">
                        <TextBlock FontWeight="Bold" Foreground="#FFE0E0E0" HorizontalAlignment="Center" FontSize="10" Height="20" TextAlignment="Center" Width="128" Margin="34,0,10,0" ><Run Text="Meilleur"/><Run Text="e"/><Run Text=" paire"/></TextBlock>
                        <Grid Height="108">


                            <Ellipse Fill="Gray" Opacity="0.3" Margin="46,10,36,10" />

                            <!-- Ellipse extérieure avec rotation et dégradé de couleur -->
                            <Ellipse StrokeThickness="10" RenderTransformOrigin="0.5,0.5" Margin="37,-4,24,-1" Height="113" VerticalAlignment="Top">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFE4E4E4" />
                                        <GradientStop Color="#FF3AFF00" Offset="0.225" />
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="OuterRotateTransform3" Angle="270" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Ellipse intérieure avec rotation et surbrillance -->
                            <Ellipse Stroke="#FF8EFF1E" StrokeThickness="13" RenderTransformOrigin="0.5,0.5" Margin="38,-3,28,6">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="InnerRotateTransform3" Angle="210" />
                                </Ellipse.RenderTransform>

                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FF3AFF00" BlurRadius="20" ShadowDepth="0" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Texte central -->
                            <TextBlock Name="meilleurePaire" Text="EURUSD" FontSize="16" FontWeight="Bold" Foreground="#FF24FF02"
               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,34,43,52" Width="71" TextAlignment="Center" />

                            <!-- Animation dans les ressources -->

                        </Grid>

                        <TextBlock FontWeight="Bold" Foreground="#FFE0E0E0" HorizontalAlignment="Center" Text="Pire paire" Height="28" Margin="43,0,24,0" Width="105" TextAlignment="Center" FontSize="10" />
                        <Grid Height="93" Margin="0,0,0,0">

                            <Ellipse Fill="Gray" Opacity="0.3" Margin="39,0,27,10" />

                            <!-- Ellipse extérieure avec rotation -->
                            <Ellipse StrokeThickness="12" RenderTransformOrigin="0.5,0.5" Margin="38,-21,29,-8" Height="122" VerticalAlignment="Top" Stroke="#FFFF0D0D">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="OuterRotateTransform4" Angle="270" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Ellipse intérieure avec rotation et surbrillance -->
                            <Ellipse Stroke="#FFFF0074" StrokeThickness="8" RenderTransformOrigin="0.5,0.5" Margin="40,-11,29,-2">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="InnerRotateTransform4" Angle="210" />
                                </Ellipse.RenderTransform>

                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FFFF6A02" BlurRadius="20" ShadowDepth="0" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Texte central -->
                            <TextBlock Name="PirePaire" Text="NZDUSD" FontSize="14" FontWeight="Bold" 
               HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,45" Width="65" Foreground="#FFFF6A02" TextAlignment="Center" />

                        </Grid>

                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="388,0,10,20" Width="193">

                        <TextBlock FontWeight="Bold" Foreground="#FFE0E0E0" HorizontalAlignment="Center" FontSize="14" TextAlignment="Center" Height="25" Margin="-1,0,0,0" Width="177" ><Run Text="Nombre total de t"/><Run Text="rade"/><Run Text="s"/></TextBlock>
                        <Grid Height="164" Margin="10,0,9,0">


                            <!-- Ellipse en fond -->
                            <Ellipse Fill="Gray" Opacity="0.3" Margin="0,10,0,15"/>

                            <!-- Première ellipse avec animation de rotation -->
                            <Ellipse x:Name="RotatingEllipse1" Stroke="#00BFFF" StrokeThickness="10"
             RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#00BFFF" BlurRadius="10" ShadowDepth="0" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Deuxième ellipse avec une autre vitesse de rotation -->
                            <Ellipse x:Name="RotatingEllipse2" Stroke="#1E90FF" StrokeThickness="15"
             RenderTransformOrigin="0.5,0.5" Margin="8,5,6,6">
                                <Ellipse.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-148.594"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Ellipse.RenderTransform>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#1E90FF" BlurRadius="10" ShadowDepth="0" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- TextBlock au centre -->
                            <TextBlock Name="nbreText" Text="75" FontSize="48" FontWeight="Bold" Foreground="LightGreen"
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,40,10,65"
               Height="62" Width="131" TextAlignment="Center"/>


                        </Grid>


                        <Grid Height="60" Margin="0,0,25,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="23*"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>

                    </StackPanel>
                    <StackPanel Margin="94,11,203,103" Width="294" Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock FontWeight="Bold" Foreground="#FFE6E6E6" HorizontalAlignment="Center" Margin="118,0,46.4,0" Width="130" ><Run Text="S"/><Run Text="trategie"/><Run Text="s"/></TextBlock>
                        <Border Background="#FF011830" CornerRadius="10" Padding="10" Margin="0,7,1,0" Height="186" >
                            <StackPanel Margin="0,0,0,-23">
                                <ListBox x:Name="StrategieListBox1" Background="#FF011830" Foreground="White" BorderThickness="0" Height="157" MouseDoubleClick="ShowStatisticsDirect" KeyDown="StrategieListBox1_KeyDown" MouseRightButtonUp="StrategieListBox1_MouseRightButtonDown">

                                </ListBox>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="72,0,73,0" Width="128">
                                    <Button Content="+" Width="130" Style="{StaticResource BoutonStyle}" Click="Button_Click_2" />
                                </StackPanel>
                            </StackPanel>

                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Liste des stratégies -->
                <Border Background="#FF02162B" CornerRadius="10" Padding="10" Margin="10,310,462,20" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                    <StackPanel Name="journalDeTrading">
                        <TextBlock Text="JOURNAL" FontWeight="Bold" Foreground="#FF8D8C8C" Margin="5" TextAlignment="Center"/>
                        <DataGrid x:Name="TradesDataGri"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  Background="#011627"
                  Foreground="White"
                  GridLinesVisibility="None"
                  BorderThickness="1"
                  BorderBrush="#01405F"
                  RowHeight="30"
                  RowBackground="#012945"
                  AlternatingRowBackground="#01355A"
                  Margin="0,10,0,0"
                  ColumnWidth="*"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                                  KeyUp="TradesDataGri_KeyUp"
                  IsReadOnly="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MouseDoubleClick="TradesDataGri_MouseDoubleClick" MouseRightButtonUp="TradesDataGri_MouseRightButtonUp"
                  >

                            <!-- Style pour les lignes -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="Margin" Value="2,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Background" Value="#012945" />
                                    <Setter Property="BorderBrush" Value="#01405F" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="2" BlurRadius="4" Color="Black" Opacity="0.5" />
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <!-- Effet de survol -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#014C75" />
                                            <Setter Property="Foreground" Value="White" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <!-- Style pour les en-têtes des colonnes -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#013355" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="BorderBrush" Value="#01405F" />
                                    <Setter Property="BorderThickness" Value="0,0,0,2" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- Définition des colonnes -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="N°" Binding="{Binding Id}" Width="auto" />
                                <DataGridTextColumn Header="Paire" Binding="{Binding Paire}" Width="auto" />
                                <DataGridTextColumn Header="Type" Binding="{Binding TypeOrdre}" Width="auto" />
                                <DataGridTextColumn Header="Date d'entrée" Binding="{Binding DateEntree}" SortMemberPath="DateEntree" Width="*" />
                                <DataGridTextColumn Header="Date de cloture" Binding="{Binding DateSortie}" Width="*" />
                                <DataGridTextColumn Header="RR" Binding="{Binding RR}" Width="auto" />
                                <DataGridTextColumn Header="Résultat" Binding="{Binding Result}" Width="auto" />
                                <DataGridTextColumn Header="Profit" Binding="{Binding Profit}" Width="auto" />
                                <DataGridTextColumn Header="Strategie" Binding="{Binding strategie}" Width="*" />
                            </DataGrid.Columns>

                            <!-- Style de sélection -->
                            <DataGrid.Resources>

                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#015A8F" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White" />
                            </DataGrid.Resources>
                        </DataGrid>
                    </StackPanel>
                </Border>


                <!-- Boutons d'action avec coins arrondis -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="176,0,642,10" Width="364">
                    <Button x:Name="AddTradeButton" Content="+" Width="130" 
            Style="{StaticResource BoutonStyle}" FontSize="20" Click="AddTradeButton_Click" />

                    <Popup x:Name="StrategyPopup" PlacementTarget="{Binding ElementName=AddTradeButton}" 
           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5" CornerRadius="5">
                            <ListBox x:Name="StrategyListBox" SelectionChanged="StrategyListBox_SelectionChanged" Width="200" Background="{x:Null}" BorderBrush="{x:Null}" />
                        </Border>
                    </Popup>
                    <Button Content="News" Width="133" Style="{StaticResource BoutonStyle}" Click="Button_Click" />
                    <Button Content="^" Width="106" Style="{StaticResource BoutonStyle}" Click="Button_Click_1" />
                </StackPanel>


                <Border Name="Notes" HorizontalAlignment="Right" BorderThickness="1" Margin="0,310,117,20" Width="340" BorderBrush="#FF02162B" CornerRadius="18" Background="#FF02162B">
                    <Grid Margin="5">
                        <Button Content="❮" Width="11" Height="30" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Center" Click="PreviousWeek_Click"/>

                        <RichTextBox x:Name="richTextBoxNotesWeeks" Background="#FF02162B" BorderBrush="{x:Null}" Foreground="#FF8DC4EA" SelectionBrush="#FFA4A4A4" BorderThickness="0" Margin="10,21,10,10" AcceptsTab="True" AutomationProperties.Name="notesPlanning" LostFocus="RichTextBox_LostFocus" KeyDown="RichTextBox_KeyDown">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text=""/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>

                        <Button Content="❯" Width="11" Height="30" Opacity="0.1" HorizontalAlignment="Right" VerticalAlignment="Center" Click="NextWeek_Click"/>

                        <TextBlock 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center" 
                            Margin="10,0,10,347" 
                            Width="368" 
                            TextAlignment="Center" 
                            Text="NOTES ET PLANNING DE LA SEMAINE" 
                            Foreground="#FF6B686C">

                            <TextBlock.ToolTip>
                                <TextBlock>
                                    Les notes hebdomadaires sont un outil essentiel pour suivre et analyser vos stratégies de trading.
                                    <LineBreak/>
                                    Elles sont sauvegardées automatiquement lorsque vous quittez le champ ou en appuyant sur <Bold>Ctrl+S</Bold>.
                                    <LineBreak/>
                                    Naviguez facilement entre les semaines passées en utilisant les flèches latérales.
                                    <LineBreak/>
                                    La date affichée sous les notes correspond au début de la semaine sélectionnée,<LineBreak/> vous permettant de situer
                                    facilement vos observations et d’analyser l'évolution de vos performances.
                                </TextBlock>
                            </TextBlock.ToolTip>        
                         </TextBlock>

                        <!-- Ajout du TextBlock pour afficher la date de début de la semaine -->
                        <TextBlock x:Name="weekStartDateText" FontSize="11" FontStyle="Italic" Foreground="#FFCFCDCD" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" TextAlignment="Center"/>
                    </Grid>
                </Border>


                <Border Name="croissance"
                HorizontalAlignment="Right"
                BorderThickness="1"
                Margin="0,310,10,20"
                Width="400"
                CornerRadius="18"
                Visibility="Collapsed" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF2D5076"/>
                            <GradientStop Color="#FF011830" Offset="0.564"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border x:Name="annoncesInvesting" HorizontalAlignment="Center" BorderThickness="1" Margin="0,275,482,45" Width="650" BorderBrush="Black" CornerRadius="18" Background="#FFF7F7F7" Visibility="Collapsed">
                    <Grid>
                        <TextBlock Text="Chargement......." FontSize="24" FontWeight="Bold" Foreground="#FF898989" Margin="164,158,134,179" />
                        <cef:ChromiumWebBrowser x:Name="InvestingCalendarBrowser" Margin="9"/>
                    </Grid>


                </Border>
                <Border x:Name="outils"
        HorizontalAlignment="Right"
        BorderThickness="4"
        Margin="0,310,4,20"
        Width="106"
        BorderBrush="#FF02162B"
        CornerRadius="18">

                    <Grid Background="#0B1E33">
                        <Button Style="{StaticResource TileButtonStyle}" Content="Études"  VerticalAlignment="Top" Margin="10,10,10,0" Height="69" Width="Auto" Click="Button_Click_3">
                            <Button.Tag>
                                <Path Data="M3 6 H9 L11 8 H21 V20 H3 Z"
              Fill="#00AEEF"
              
              VerticalAlignment="Center" Height="26.001" Stretch="Fill" Width="29.666"/>
                            </Button.Tag>
                        </Button>

                    </Grid>
                </Border>



            </Grid>


        </Grid>
        <!-- Barre de titre avec boutons de fermeture et de réduction -->
        <DockPanel VerticalAlignment="Top" Height="30" Background="#004080" MouseDown="TitleBar_MouseDown" 
           MouseRightButtonDown="TitleBar_MouseDoubleClick" Grid.ColumnSpan="2">
            <TextBlock Text="Tableau de Bord - Performances" FontSize="16" FontWeight="Bold" Foreground="White"
               VerticalAlignment="Center" Margin="10,0,0,0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="_" Width="30" Style="{StaticResource BoutonStyle}" 
                Click="MinimizeButton_Click"/>
                <Button Content="X" Width="30" Style="{StaticResource BoutonStyle}"
                Click="CloseButton_Click"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>